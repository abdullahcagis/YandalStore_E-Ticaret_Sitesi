@using YandalStore.Models
<!DOCTYPE html>
@{ 
    Model1 db = new Model1();
    List<UserCart> cartList = new List<UserCart>();
    if(Session["user"] != null)
    {
        User u = Session["user"] as User;
        int id = u.ID;
        cartList = db.UserCarts.Where(x => x.User_ID == id).ToList();       
    }
}

