@model IEnumerable<YandalStore.Models.UserCart>
@{
    ViewBag.Title = "Favrouite";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>Favoriler</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>
                                        Resim
                                    </th>
                                    <th> <label class="d-none d-sm-block">Isim</label></th>
                                    <th>Adet</th>
                                    <th></th>
                                    <th>Fiyat</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th style="vertical-align:middle">@item.ID</th>
                                        <th><img src="~/Images/ProductImages/@item.Product.CoverImage" class="img-thumbnail " width="100" /></th>
                                        <th style="vertical-align:middle">
                                            <label class="d-none d-sm-block">@item.Product.Name</label>
                                        </th>
                                        <th style="vertical-align:middle">@item.Quantity</th>                                              
                                        <th style="vertical-align:middle">
                                            <a href="@Url.Action("DeleteBasket","UserCart", new { id = item.ID})" class="btn btn-danger btn-sm">Sil</a>
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">

                    <a href="@Url.Action("Index","Home")" class="btn btn-secondary float-end">Alışverişe Devam Et</a>

                </div>
            </div>
        </div>


                           
                        

                   
                             
           
      
    </div>

</div>

